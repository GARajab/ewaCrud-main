<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Schemes</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.dataTables.min.css"
    />
    <style>
      body {
        margin: 30px;
        font-family: Arial, sans-serif;
      }
      h1 {
        margin-bottom: 20px;
      }
      .table-container {
        margin: 0 auto;
        max-width: 100%;
      }

      .export-buttons {
        margin: 20px 0;
      }

      /* Toast container */
      .toast-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1050;
        pointer-events: none;
      }
      /* Spinner overlay styles */
      .spinner-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 2000;
      }
      .spinner-overlay.show {
        display: flex;
      }
      .apple-spinner {
        display: inline-block;
        width: 30px;
        height: 30px;
        border: 5px solid rgba(0, 0, 0, 0.1);
        border-radius: 50%;
        border-top-color: #3498db;
        animation: spin 1s linear infinite;
      }
      @keyframes spin {
        0% {
          transform: rotate(0deg);
        }
        100% {
          transform: rotate(360deg);
        }
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light mb-4">
      <div class="container">
        <h1 id="nav-header">EWA "Mohamed Rajab"</h1>
        <div class="nav-links">
          <a href="/auth/sign-out" class="btn btn-primary">Sign Out</a>
          <a href="/schemes/new" class="btn btn-primary">Add New Scheme</a>
        </div>
      </div>
    </nav>

    <h1 class="text-center">Schemes Table</h1>

    <div class="container table-container">
      <table
        id="example"
        class="table table-striped table-bordered"
        style="width: 100%"
      >
        <thead style="background-color: blue; color: white">
          <tr>
            <th>#</th>
            <th>Scheme Reference</th>
            <th>Job Number</th>
            <th>Block</th>
            <th>Supervisor</th>
            <th>Contractor Name</th>
            <th>Title</th>
            <th>Status</th>
            <th>Percentage</th>
            <th>Date of Completion</th>
            <th>Application Status</th>
            <th>Date of Measurement</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="servicesTableBody">
          <% populatedSchemes.forEach((populatedScheme, index) => { %>
          <tr data-id="<%= populatedScheme.id %>">
            <th scope="row"><%= index + 1 %></th>
            <td data-searchable><%= populatedScheme.Sch_Ref %></td>
            <td data-searchable><%= populatedScheme.Job_no %></td>
            <td data-searchable><%= populatedScheme.BLK %></td>
            <td data-searchable><%= populatedScheme.SUPERVISOR %></td>
            <td data-searchable><%= populatedScheme.ContractorName %></td>
            <td data-searchable><%= populatedScheme.Title1 %></td>
            <td data-searchable><%= populatedScheme.STATUS %></td>
            <td data-searchable><%= populatedScheme.PERCENTAGE %></td>
            <td data-searchable>
              <%= populatedScheme.DATE_OF_COMPLETE ?
              populatedScheme.DATE_OF_COMPLETE.toISOString().split('T')[0].replace(/-/g,
              '/') : '' %>
            </td>
            <td data-searchable><%= populatedScheme.APPSTATUS %></td>
            <td data-searchable>
              <%= populatedScheme.DATEOFMEASUREMENT ?
              populatedScheme.DATEOFMEASUREMENT.toISOString().split('T')[0].replace(/-/g,
              '/') : '' %>
            </td>
            <td>
              <div class="dropdown">
                <button
                  class="btn btn-secondary dropdown-toggle"
                  type="button"
                  id="dropdownMenuButton"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <i class="fas fa-ellipsis-v"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <li>
                    <button
                      class="dropdown-item edit-button"
                      data-bs-toggle="modal"
                      data-bs-target="#editModal"
                      data-id="<%= populatedScheme.id %>"
                      data-scheme-ref="<%= populatedScheme.Sch_Ref %>"
                      data-job-number="<%= populatedScheme.Job_no %>"
                      data-block="<%= populatedScheme.BLK %>"
                      data-supervisor="<%= populatedScheme.SUPERVISOR %>"
                      data-contractor-name="<%= populatedScheme.ContractorName %>"
                      data-title="<%= populatedScheme.Title1 %>"
                      data-status="<%= populatedScheme.STATUS %>"
                      data-percentage="<%= populatedScheme.PERCENTAGE %>"
                      data-date-complete="<%= populatedScheme.DATE_OF_COMPLETE ? populatedScheme.DATE_OF_COMPLETE.toISOString() : '' %>"
                      data-app-status="<%= populatedScheme.APPSTATUS %>"
                      data-date-measurement="<%= populatedScheme.DATEOFMEASUREMENT ? populatedScheme.DATEOFMEASUREMENT.toISOString() : '' %>"
                    >
                      <i class="fas fa-edit"></i> Edit
                    </button>
                  </li>
                  <li>
                    <form
                      action="/schemes/delete/<%= populatedScheme.id %>?_method=DELETE"
                      method="POST"
                      style="display: inline"
                    >
                      <button type="submit" class="dropdown-item">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </form>
                  </li>
                </ul>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit Scheme</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editForm" action="#" method="POST">
              <div class="mb-3">
                <label for="Sch_Ref" class="form-label">Scheme Reference</label>
                <input
                  type="text"
                  class="form-control"
                  id="Sch_Ref"
                  name="Sch_Ref"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="Job_no" class="form-label">Job Number</label>
                <input
                  type="text"
                  class="form-control"
                  id="Job_no"
                  name="Job_no"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="BLK" class="form-label">Block</label>
                <input
                  type="text"
                  class="form-control"
                  id="BLK"
                  name="BLK"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="SUPERVISOR" class="form-label">Supervisor</label>
                <input
                  type="text"
                  class="form-control"
                  id="SUPERVISOR"
                  name="SUPERVISOR"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="ContractorName" class="form-label"
                  >Contractor Name</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="ContractorName"
                  name="ContractorName"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="Title1" class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="Title1"
                  name="Title1"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="STATUS" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="STATUS"
                  name="STATUS"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="PERCENTAGE" class="form-label">Percentage</label>
                <input
                  type="number"
                  class="form-control"
                  id="PERCENTAGE"
                  name="PERCENTAGE"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="DATE_OF_COMPLETE" class="form-label"
                  >Date of Completion</label
                >
                <input
                  type="date"
                  class="form-control"
                  id="DATE_OF_COMPLETE"
                  name="DATE_OF_COMPLETE"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="APPSTATUS" class="form-label"
                  >Application Status</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="APPSTATUS"
                  name="APPSTATUS"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="DATEOFMEASUREMENT" class="form-label"
                  >Date of Measurement</label
                >
                <input
                  type="date"
                  class="form-control"
                  id="DATEOFMEASUREMENT"
                  name="DATEOFMEASUREMENT"
                  required
                />
              </div>
              <input type="hidden" id="schemeId" name="schemeId" />
              <button type="submit" class="btn btn-primary">
                Save Changes
                <span
                  class="spinner-border spinner-border-sm ml-2"
                  role="status"
                  id="loadingSpinner"
                  style="display: none"
                ></span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Overlay for loading spinner -->
    <div class="spinner-overlay" id="loadingOverlay">
      <div class="apple-spinner text-light" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <!-- Toast container for notifications -->
    <div class="toast-container">
      <div
        id="successToast"
        class="toast align-items-center text-white bg-success"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">Changes saved successfully!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <div
        id="deleteToast"
        class="toast align-items-center text-white bg-danger"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">Scheme deleted successfully!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.colVis.min.js"></script>

    <script>
      $(document).ready(function () {
        var table = $("#example").DataTable({
          responsive: true,
          dom: "Bfrtip",
          buttons: [
            {
              extend: "copy",
              text: "Copy",
              className: "btn btn-primary",
            },
            {
              extend: "excel",
              text: "Export to Excel",
              className: "btn btn-success",
            },
            {
              extend: "pdf",
              text: "Export to PDF",
              className: "btn btn-danger",
            },
            {
              extend: "print",
              text: "Print",
              className: "btn btn-warning",
            },
            {
              extend: "colvis",
              text: "Column Select",
              className: "btn btn-info",
            },
          ],
        })

        // Populate modal fields on click
        $("#servicesTableBody").on("click", ".edit-button", function () {
          $("#schemeId").val($(this).data("id"))
          $("#Sch_Ref").val($(this).data("scheme-ref"))
          $("#Job_no").val($(this).data("job-number"))
          $("#BLK").val($(this).data("block"))
          $("#SUPERVISOR").val($(this).data("supervisor"))
          $("#ContractorName").val($(this).data("contractor-name"))
          $("#Title1").val($(this).data("title"))
          $("#STATUS").val($(this).data("status"))
          $("#PERCENTAGE").val($(this).data("percentage"))

          $("#DATE_OF_COMPLETE").val(
            $(this).data("date-complete")
              ? new Date($(this).data("date-complete"))
                  .toISOString()
                  .split("T")[0]
              : ""
          )
          $("#APPSTATUS").val($(this).data("app-status"))
          $("#DATEOFMEASUREMENT").val(
            $(this).data("date-measurement")
              ? new Date($(this).data("date-measurement"))
                  .toISOString()
                  .split("T")[0]
              : ""
          )

          $("#editForm").attr(
            "action",
            "/schemes/update/" + $(this).data("id") + "?_method=PUT"
          )
        })

        // Handle form submission
        $("#editForm").on("submit", function (event) {
          event.preventDefault() // Prevent the default form submission
          $("#loadingOverlay").addClass("show") // Show spinner overlay

          $.ajax({
            url: $(this).attr("action"),
            type: $(this).attr("method"),
            data: $(this).serialize(),
            success: function (response) {
              const rowId = $("#schemeId").val()
              const row = $("#servicesTableBody tr[data-id='" + rowId + "']")
              row.remove()

              var newRowData = {
                id: rowId,
                Sch_Ref: $("#Sch_Ref").val(),
                Job_no: $("#Job_no").val(),
                BLK: $("#BLK").val(),
                SUPERVISOR: $("#SUPERVISOR").val(),
                ContractorName: $("#ContractorName").val(),
                Title1: $("#Title1").val(),
                STATUS: $("#STATUS").val(),
                PERCENTAGE: $("#PERCENTAGE").val(),
              }

              var newRow = `<tr data-id='${rowId}'>
                            <td><input type="checkbox" class="select-row" /></td>
                            <th scope="row">${row
                              .find("th")
                              .first()
                              .text()}</th>
                            <td data-searchable>${newRowData.Sch_Ref}</td>
                            <td data-searchable>${newRowData.Job_no}</td>
                            <td data-searchable>${newRowData.BLK}</td>
                            <td data-searchable>${newRowData.SUPERVISOR}</td>
                            <td data-searchable>${
                              newRowData.ContractorName
                            }</td>
                            <td data-searchable>${newRowData.Title1}</td>
                            <td data-searchable>${newRowData.STATUS}</td>
                            <td data-searchable>${newRowData.PERCENTAGE}</td>
                            <td data-searchable>${$(
                              "#DATE_OF_COMPLETE"
                            ).val()}</td>
                            <td data-searchable>${$("#APPSTATUS").val()}</td>
                            <td data-searchable>${$(
                              "#DATEOFMEASUREMENT"
                            ).val()}</td>
                            <td>
                                <div class="d-flex justify-content-between">
                                    <button class="btn btn-primary btn-block btn-sm edit-button" data-bs-toggle="modal" data-bs-target="#editModal" 
                                            data-id="${newRowData.id}" 
                                            data-scheme-ref="${
                                              newRowData.Sch_Ref
                                            }" 
                                            data-job-number="${
                                              newRowData.Job_no
                                            }" 
                                            data-block="${newRowData.BLK}" 
                                            data-supervisor="${
                                              newRowData.SUPERVISOR
                                            }" 
                                            data-contractor-name="${
                                              newRowData.ContractorName
                                            }" 
                                            data-title="${newRowData.Title1}" 
                                            data-status="${newRowData.STATUS}" 
                                            data-percentage="${
                                              newRowData.PERCENTAGE
                                            }" 
                                            data-date-complete="${$(
                                              "#DATE_OF_COMPLETE"
                                            ).val()}" 
                                            data-app-status="${$(
                                              "#APPSTATUS"
                                            ).val()}" 
                                            data-date-measurement="${$(
                                              "#DATEOFMEASUREMENT"
                                            ).val()}">
                                        Edit
                                    </button>
                                    <form action="/schemes/delete/${rowId}?_method=DELETE" method="POST" style="display: inline" class="delete-form">
                                        <button type="submit" class="btn btn-block btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>`

              $("#servicesTableBody").append(newRow)

              const toast = new bootstrap.Toast($("#successToast"))
              $("#successToast").show()
              toast.show() // Show success message toast

              $("#loadingOverlay").removeClass("show") // Hide spinner overlay
              $("#editModal").modal("hide")
            },
            error: function () {
              alert("An error occurred while processing your request.")
              $("#loadingOverlay").removeClass("show") // Hide spinner in case of an error
            },
          })
        })

        // Show delete toast and remove row on delete action
        $(".delete-form").on("submit", function (event) {
          event.preventDefault() // Prevent default form submission
          const form = $(this)
          $("#loadingOverlay").addClass("show") // Show spinner overlay

          $.ajax({
            url: form.attr("action"),
            method: "POST",
            success: function () {
              form.closest("tr").remove() // Remove the row from the table

              const toast = new bootstrap.Toast($("#deleteToast"))
              $("#deleteToast").show()
              toast.show() // Show delete toast notification

              $("#loadingOverlay").removeClass("show") // Hide spinner overlay
            },
            error: function () {
              alert("An error occurred while trying to delete the scheme.")
              $("#loadingOverlay").removeClass("show") // Hide spinner in case of an error
            },
          })
        })

        // Email functionality (you need to implement email sending logic server-side)
        $("#sendEmail").on("click", function () {
          alert(
            "Email functionality is not implemented in this mockup. Please implement it server-side."
          )
        })

        // Refresh page when any toast is closed
        const toastElements = document.querySelectorAll(".toast")
        toastElements.forEach((toast) => {
          toast.addEventListener("hidden.bs.toast", function () {
            location.reload()
          })
        })
      })
    </script>
  </body>
</html>
