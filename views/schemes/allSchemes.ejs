<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Schemes</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css"
    />
    <style>
      body {
        margin-left: 30px;
        margin-right: 30px;
      }
      .table-container {
        margin: 0 auto;
        max-width: 100%;
      }
      .toast-container {
        position: fixed;
        top: 1rem;
        right: 1rem;
        z-index: 1050;
        pointer-events: none; /* Ensure underlying elements can be clicked */
      }
      /* Spinner overlay styles */
.spinner-overlay {
  position: fixed;
  top: 0; /* Align top */
  left: 0; /* Align left */
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  background: rgba(0, 0, 0, 0.5); /* Semi-transparent background */
  display: none; /* Initially hidden */
  justify-content: center; /* Center horizontally */
  align-items: center; /* Center vertically */
  z-index: 2000; /* High z-index to display above other elements */
}

/* Add styles for visibility */
.spinner-overlay.show {
  display: flex; /* Change to flex on show */
}
    </style>
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <div class="container">
        <h1 id="nav-header">EWA "Mohamed Rajab"</h1>
        <div class="nav-links">
          <a href="/auth/sign-out" class="btn btn-primary">Sign Out</a>
          <a href="/schemes/new" class="btn btn-primary">Add New Scheme</a>
        </div>
      </div>
    </nav>

    <h1 class="text-center">Schemes Table</h1>

    <div class="container table-container">
      <table class="table table-bordered table-hover text-center" id="myTable">
        <thead>
          <tr>
            <th>#</th>
            <th>Scheme Reference</th>
            <th>Job Number</th>
            <th>Block</th>
            <th>Supervisor</th>
            <th>Contractor Name</th>
            <th>Title</th>
            <th>Status</th>
            <th>Percentage</th>
            <th>Date of Completion</th>
            <th>Application Status</th>
            <th>Date of Measurement</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="servicesTableBody">
          <% populatedSchemes.forEach((populatedScheme, index) => { %>
          <tr data-id="<%= populatedScheme.id %>">
            <th scope="row"><%= index + 1 %></th>
            <td data-searchable><%= populatedScheme.Sch_Ref %></td>
            <td data-searchable><%= populatedScheme.Job_no %></td>
            <td data-searchable><%= populatedScheme.BLK %></td>
            <td data-searchable><%= populatedScheme.SUPERVISOR %></td>
            <td data-searchable><%= populatedScheme.ContractorName %></td>
            <td data-searchable><%= populatedScheme.Title1 %></td>
            <td data-searchable><%= populatedScheme.STATUS %></td>
            <td data-searchable><%= populatedScheme.PERCENTAGE %></td>
            <td data-searchable>
              <%= populatedScheme.DATE_OF_COMPLETE ?
              populatedScheme.DATE_OF_COMPLETE.toISOString().split('T')[0].replace(/-/g,
              '/') : '' %>
            </td>
            <td data-searchable><%= populatedScheme.APPSTATUS %></td>
            <td data-searchable>
              <%= populatedScheme.DATEOFMEASUREMENT ?
              populatedScheme.DATEOFMEASUREMENT.toISOString().split('T')[0].replace(/-/g,
              '/') : '' %>
            </td>
            <td>
              <div class="d-flex justify-content-between">
                <button
                  class="btn btn-primary btn-block btn-sm edit-button me-1"
                  data-bs-toggle="modal"
                  data-bs-target="#editModal"
                  data-id="<%= populatedScheme.id %>"
                  data-scheme-ref="<%= populatedScheme.Sch_Ref %>"
                  data-job-number="<%= populatedScheme.Job_no %>"
                  data-block="<%= populatedScheme.BLK %>"
                  data-supervisor="<%= populatedScheme.SUPERVISOR %>"
                  data-contractor-name="<%= populatedScheme.ContractorName %>"
                  data-title="<%= populatedScheme.Title1 %>"
                  data-status="<%= populatedScheme.STATUS %>"
                  data-percentage="<%= populatedScheme.PERCENTAGE %>"
                  data-date-complete="<%= populatedScheme.DATE_OF_COMPLETE ? populatedScheme.DATE_OF_COMPLETE.toISOString() : '' %>"
                  data-app-status="<%= populatedScheme.APPSTATUS %>"
                  data-date-measurement="<%= populatedScheme.DATEOFMEASUREMENT ? populatedScheme.DATEOFMEASUREMENT.toISOString() : '' %>"
                >
                  Edit
                </button>
                <form
                  action="/schemes/delete/<%= populatedScheme.id %>?_method=DELETE"
                  method="POST"
                  style="display: inline"
                  class="delete-form"
                >
                  <button
                    type="submit"
                    class="btn btn-block btn-danger btn-sm me-1"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
     

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit Scheme</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editForm" action="#" method="POST">
              <div class="mb-3">
                <label for="Sch_Ref" class="form-label">Scheme Reference</label>
                <input
                  type="text"
                  class="form-control"
                  id="Sch_Ref"
                  name="Sch_Ref"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="Job_no" class="form-label">Job Number</label>
                <input
                  type="text"
                  class="form-control"
                  id="Job_no"
                  name="Job_no"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="BLK" class="form-label">Block</label>
                <input
                  type="text"
                  class="form-control"
                  id="BLK"
                  name="BLK"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="SUPERVISOR" class="form-label">Supervisor</label>
                <input
                  type="text"
                  class="form-control"
                  id="SUPERVISOR"
                  name="SUPERVISOR"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="ContractorName" class="form-label"
                  >Contractor Name</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="ContractorName"
                  name="ContractorName"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="Title1" class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="Title1"
                  name="Title1"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="STATUS" class="form-label">Status</label>
                <input
                  type="text"
                  class="form-control"
                  id="STATUS"
                  name="STATUS"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="PERCENTAGE" class="form-label">Percentage</label>
                <input
                  type="number"
                  class="form-control"
                  id="PERCENTAGE"
                  name="PERCENTAGE"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="DATE_OF_COMPLETE" class="form-label"
                  >Date of Completion</label
                >
                <input
                  type="date"
                  class="form-control"
                  id="DATE_OF_COMPLETE"
                  name="DATE_OF_COMPLETE"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="APPSTATUS" class="form-label"
                  >Application Status</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="APPSTATUS"
                  name="APPSTATUS"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="DATEOFMEASUREMENT" class="form-label"
                  >Date of Measurement</label
                >
                <input
                  type="date"
                  class="form-control"
                  id="DATEOFMEASUREMENT"
                  name="DATEOFMEASUREMENT"
                  required
                />
              </div>
              <input type="hidden" id="schemeId" name="schemeId" />
              <button type="submit" class="btn btn-primary">
                Save Changes
                <span
                  class="spinner-border spinner-border-sm ml-2"
                  role="status"
                  id="loadingSpinner"
                  style="display: none"
                ></span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Overlay for loading spinner -->
    <div class="spinner-overlay" id="loadingOverlay">
      <div class="spinner-border text-light" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <!-- Toast container for notifications -->
    <div class="toast-container">
      <div
        id="successToast"
        class="toast align-items-center text-white bg-success"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">Changes saved successfully!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <div
        id="deleteToast"
        class="toast align-items-center text-white bg-danger"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        style="display: none"
      >
        <div class="d-flex">
          <div class="toast-body">Scheme deleted successfully!</div>
          <button
            type="button"
            class="btn-close btn-close-white me-2 m-auto"
            data-bs-dismiss="toast"
            aria-label="Close"
          ></button>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
      $(document).ready(function () {
        // Maintain the style of the edit and delete buttons
        function createEditButton(data) {
          return `<button class="btn btn-primary btn-block btn-sm edit-button" data-bs-toggle="modal" data-bs-target="#editModal" data-id="${data.id}" data-scheme-ref="${data.Sch_Ref}" data-job-number="${data.Job_no}" data-block="${data.BLK}" data-supervisor="${data.SUPERVISOR}" data-contractor-name="${data.ContractorName}" data-title="${data.Title1}" data-status="${data.STATUS}" data-percentage="${data.PERCENTAGE}" data-date-complete="${data.DATE_OF_COMPLETE}" data-app-status="${data.APPSTATUS}" data-date-measurement="${data.DATEOFMEASUREMENT}">Edit</button>`
        }

        function createDeleteButton(id) {
          return `<form action="/schemes/delete/${id}?_method=DELETE" method="POST" style="display: inline" class="delete-form"><button type="submit" class="btn btn-block btn-danger btn-sm">Delete</button></form>`
        }

        // Populate modal fields on click
        $("#servicesTableBody").on("click", ".edit-button", function () {
          // Retrieve data attributes and populate the modal fields
          $("#schemeId").val($(this).data("id"))
          $("#Sch_Ref").val($(this).data("scheme-ref"))
          $("#Job_no").val($(this).data("job-number"))
          $("#BLK").val($(this).data("block"))
          $("#SUPERVISOR").val($(this).data("supervisor"))
          $("#ContractorName").val($(this).data("contractor-name"))
          $("#Title1").val($(this).data("title"))
          $("#STATUS").val($(this).data("status"))
          $("#PERCENTAGE").val($(this).data("percentage"))

          // Use the correct date formats
          $("#DATE_OF_COMPLETE").val(
            $(this).data("date-complete")
              ? new Date($(this).data("date-complete"))
                  .toISOString()
                  .split("T")[0]
              : ""
          )
          $("#APPSTATUS").val($(this).data("app-status"))
          $("#DATEOFMEASUREMENT").val(
            $(this).data("date-measurement")
              ? new Date($(this).data("date-measurement"))
                  .toISOString()
                  .split("T")[0]
              : ""
          )

          // Update form action with the correct URL
          $("#editForm").attr(
            "action",
            "/schemes/update/" + $(this).data("id") + "?_method=PUT"
          )
        })

        // Handle form submission
$("#editForm").on("submit", function (event) {
  event.preventDefault(); // Prevent the default form submission

// Show overlay and spinner
$("#loadingOverlay").addClass('show'); // Show spinner overlay here
  $.ajax({
    url: $(this).attr("action"),
    type: $(this).attr("method"),
    data: $(this).serialize(),
    success: function (response) {
      const rowId = $("#schemeId").val();
      const row = $("#servicesTableBody tr[data-id='" + rowId + "']");
      row.remove();

      var newRowData = {
        id: rowId,
        Sch_Ref: $("#Sch_Ref").val(),
        Job_no: $("#Job_no").val(),
        BLK: $("#BLK").val(),
        SUPERVISOR: $("#SUPERVISOR").val(),
        ContractorName: $("#ContractorName").val(),
        Title1: $("#Title1").val(),
        STATUS: $("#STATUS").val(),
        PERCENTAGE: $("#PERCENTAGE").val(),
      };

      var newRow = `<tr data-id='${rowId}'>
            <th scope="row">${row.find("th").first().text()}</th>
            <td data-searchable>${newRowData.Sch_Ref}</td>
            <td data-searchable>${newRowData.Job_no}</td>
            <td data-searchable>${newRowData.BLK}</td>
            <td data-searchable>${newRowData.SUPERVISOR}</td>
            <td data-searchable>${newRowData.ContractorName}</td>
            <td data-searchable>${newRowData.Title1}</td>
            <td data-searchable>${newRowData.STATUS}</td>
            <td data-searchable>${newRowData.PERCENTAGE}</td>
            <td data-searchable>${$("#DATE_OF_COMPLETE").val()}</td>
            <td data-searchable>${$("#APPSTATUS").val()}</td>
            <td data-searchable>${$("#DATEOFMEASUREMENT").val()}</td>
            <td>${createEditButton(newRowData)} ${createDeleteButton(rowId)}</td>
          </tr>`;

      $("#servicesTableBody").append(newRow);

      // Show the success toast after 2 seconds
      setTimeout(function () {
        // Hide the spinner
      $("#loadingOverlay").removeClass('show'); // Hide spinner overlay

        // Show the success toast
        const toast = new bootstrap.Toast($("#successToast"));
        $("#successToast").show();
        toast.show(); // Show success message toast
      }, 2000); // 2000 ms = 2 seconds

      // Hide the modal
      $("#editModal").modal("hide");
    },
    error: function () {
      // Error handling (if necessary)
      alert("An error occurred while processing your request.");
      $("#loadingOverlay").hide(); // Hide spinner in case of an error
    },
  });
});

        // Show delete toast and remove row on delete action
        $(".delete-form").on("submit", function (event) {
          event.preventDefault() // Prevent default form submission
          const form = $(this)

          $.ajax({
            url: form.attr("action"),
            method: "POST",
            success: function () {
              // Show the delete toast
              const toast = new bootstrap.Toast($("#deleteToast"))
              $("#deleteToast").show()
              toast.show() // Show delete toast notification
              form.closest("tr").remove() // Remove the row from the table
            },
            error: function () {
              // Handle error
            },
          })
        })

        // Refresh page when any toast is closed
        const toastElements = document.querySelectorAll(".toast")
        toastElements.forEach((toast) => {
          toast.addEventListener("hidden.bs.toast", function () {
            location.reload()
          })
        })
      })
    </script>
  </body>
</html>
